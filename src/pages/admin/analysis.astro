---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { getProjectAnalyses } from "../../lib/server/actions";
import { verifyToken } from "../../lib/server/auth";

const token = Astro.cookies.get("admin_token")?.value;

if (!token || !verifyToken(token)) {
    return Astro.redirect("/admin/login");
}

const analyses = await getProjectAnalyses(token);
---

<AdminLayout title="Análisis de Proyectos">
    <div class="mb-8 flex justify-between items-center">
        <div>
            <h1
                class="text-3xl font-bold leading-tight text-white tracking-tight"
            >
                Análisis de Proyectos
            </h1>
            <p class="text-gray-400 mt-2">
                Solicitudes de estudio técnico y económico.
            </p>
        </div>
        <a
            href="/admin"
            class="text-gray-400 hover:text-white transition-colors flex items-center gap-2"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5"
                viewBox="0 0 20 20"
                fill="currentColor"
            >
                <path
                    fill-rule="evenodd"
                    d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
                    clip-rule="evenodd"></path>
            </svg>
            Volver
        </a>
    </div>

    {
        analyses.length === 0 ? (
            <div class="text-center py-12 bg-neutral-900 rounded-3xl border border-neutral-800 shadow-sm">
                <p class="text-gray-500 text-lg">
                    No hay solicitudes de análisis aún.
                </p>
            </div>
        ) : (
            <div class="bg-neutral-900 shadow-xl overflow-hidden sm:rounded-3xl border border-neutral-800">
                <ul class="divide-y divide-neutral-800">
                    {analyses.map((item: any) => (
                        <li>
                            <div class="block hover:bg-neutral-800/50 transition-colors">
                                <div class="px-6 py-6 sm:px-8">
                                    <div class="flex items-center justify-between mb-4">
                                        <div class="flex items-center gap-4">
                                            <span
                                                class={`px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full border ${
                                                    item.queryType ===
                                                    "Obra Nueva"
                                                        ? "bg-blue-900/30 text-blue-400 border-blue-800"
                                                        : item.queryType ===
                                                            "Reformas"
                                                          ? "bg-purple-900/30 text-purple-400 border-purple-800"
                                                          : "bg-green-900/30 text-green-400 border-green-800"
                                                }`}
                                            >
                                                {item.queryType}
                                            </span>
                                            {item.isNewConstruction && (
                                                <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full border bg-yellow-900/30 text-yellow-400 border-yellow-800">
                                                    Nueva Construcción
                                                </span>
                                            )}
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            {new Date(
                                                item.createdAt,
                                            ).toLocaleDateString()}{" "}
                                            {new Date(
                                                item.createdAt,
                                            ).toLocaleTimeString()}
                                        </div>
                                    </div>

                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                        <div>
                                            <h3 class="text-lg font-bold text-white mb-1">
                                                {item.projectTypeDetail}
                                            </h3>
                                            <p class="text-sm text-gray-400 flex items-center gap-2">
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    class="h-4 w-4"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                                    />
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                                    />
                                                </svg>
                                                {item.location}
                                            </p>
                                        </div>

                                        <div class="text-sm text-gray-300 space-y-1">
                                            <p>
                                                <span class="text-gray-500 font-medium">
                                                    Metros:
                                                </span>{" "}
                                                {item.sqMeters} m²
                                            </p>
                                            {item.pricePerSqMeter && (
                                                <p>
                                                    <span class="text-gray-500 font-medium">
                                                        Precio Objetivo:
                                                    </span>{" "}
                                                    {item.pricePerSqMeter} €/m²
                                                </p>
                                            )}
                                        </div>
                                    </div>

                                    {item.analysisDetails && (
                                        <div class="mt-4 p-4 bg-black/20 rounded-xl border border-white/5">
                                            <p class="text-sm text-gray-300 italic">
                                                "{item.analysisDetails}"
                                            </p>
                                        </div>
                                    )}

                                    <div class="mt-6 flex items-center justify-between border-t border-white/5 pt-4">
                                        <div class="flex flex-col sm:flex-row sm:items-center gap-4">
                                            <a
                                                href={`mailto:${item.contactEmail}`}
                                                class="text-action hover:text-white transition-colors flex items-center gap-2 text-sm font-medium"
                                            >
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    class="h-4 w-4"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                                                    />
                                                </svg>
                                                {item.contactEmail}
                                            </a>
                                            <a
                                                href={`tel:${item.contactPhone}`}
                                                class="text-gray-400 hover:text-white transition-colors flex items-center gap-2 text-sm"
                                            >
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    class="h-4 w-4"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                >
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                                                    />
                                                </svg>
                                                {item.contactPhone}
                                            </a>
                                        </div>

                                        <button class="text-xs uppercase tracking-widest bg-white/10 hover:bg-white/20 text-white py-2 px-4 rounded-lg transition-colors">
                                            Marcar Contactado
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </li>
                    ))}
                </ul>
            </div>
        )
    }
</AdminLayout>
