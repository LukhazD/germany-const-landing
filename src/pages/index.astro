---
import "../styles/global.css";
import Hero from "../components/react/Hero";
import ServicesHeader from "../components/react/ServicesHeader";
import BentoGrid from "../components/react/BentoGrid";
import Cursor from "../components/react/Cursor";
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Germany Const - Arquitectura y Reformas</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&family=Manrope:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #1a1a1a;
        color: white;
        cursor: none;
      }
      @media (pointer: coarse) {
        body {
          cursor: auto;
        }
      }
    </style>
  </head>
  <body
    class="antialiased bg-background overflow-x-hidden min-h-screen flex flex-col"
  >
    <Cursor client:only="react" />

    <ServicesHeader client:load />
    <main class="flex-grow w-full">
      <Hero client:only="react" />
      <BentoGrid client:only="react" />
    </main>
  </body>
</html>
